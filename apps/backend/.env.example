# Example environment variables for development
# Copy this file to .env and update with your values

# Database
DATABASE_URL=jdbc:postgresql://localhost:5432/krishihub
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# JWT
JWT_SECRET=your-secret-key-change-in-production-minimum-256-bits-long-for-security

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# SMS Gateway (Sparrow SMS Nepal)
SMS_API_URL=http://api.sparrowsms.com/v2/sms/
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=KRISHIHUB

# eSewa Payment Gateway
ESEWA_MERCHANT_ID=your-merchant-id
ESEWA_SECRET_KEY=your-secret-key
ESEWA_SUCCESS_URL=http://localhost:5173/payment/success
ESEWA_FAILURE_URL=http://localhost:5173/payment/failure

# Khalti Payment Gateway
KHALTI_PUBLIC_KEY=your-public-key
KHALTI_SECRET_KEY=your-secret-key
KHALTI_SUCCESS_URL=http://localhost:5173/payment/success
KHALTI_FAILURE_URL=http://localhost:5173/payment/failure

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
